<div class="main-user">
    <div class="user-body">

        <div class="user-logo"> 
            <img id="profile-img" class="img-user" 
            src="<%= user2.profilePicture && user2.profilePicture !== '' ? user2.profilePicture : '/uploads/deerDp.jpg' %>" 
     alt="User Profile"
     onerror="this.onerror=null; this.src='/uploads/default-profile.jpg';">
            
        </div>

        <input type="hidden" id="user-id" value="<%= user2._id %>">

        <input type="file" id="profile-input" accept="image/*" style="display:none;">
        <button class="add-cam" onclick="document.getElementById('profile-input').click();"><i class="fa-solid fa-camera"></i></button>
        <button class="dp-save add-cam dark-bg dark-mood-text " onclick="uploadProfilePicture()">Save</button>
        
        <h3><%= user2.name %></h3>
        <h3><%= user2.email %></h3>

        <h2 class="wishlist">Wishlists</h2>
        <br><br><br>
        <div class="user-wishlists">
            <% if (wishlists && wishlists.wishlist.length > 0) { %>
                <% for (let wishlist of wishlists.wishlist) { %>
                    <div class="wish-lists  user-wish ">
                    <a href="/mysticodisha/destination/<%= wishlist.dist %>/<%= wishlist.name %>">
                        <img src="<%= wishlist.image %>" alt="img">
                        <h4 class="dark-mood-text"><%= wishlist.name %></h4>
                        <h5 class="dark-mood-text"><%= wishlist.dist %></h5>
                    </a>

                    <form action="/mysticodisha/user/<%= user2._id %>/<%= wishlist._id %>?_method=DELETE" method="post">
                        <button class="delete-list"><i class="fa-solid fa-trash dark-mood-text"></i></button>
                    </form>

                    </div>
                <% } %>
            <% } else { %>
                <p>No items in wishlists.</p>
            <% } %>
        </div>

        <br> <br> <br>



    </div>

</div>