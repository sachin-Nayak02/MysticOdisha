<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Existing head content remains the same -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/forgot.css">
    <link rel="icon" href="../images/mysticlogo.jpg"/>
    <title>Reset Password</title>
</head>

<body>
    <!-- Forgot Password -->
    <div id="forgot-container" class="forgot-container">
        <div class="forgot-card">
            <div class="header pass">
                <h1>Reset Your Password</h1>
                <p class="instruction-text">Enter your email and new password to continue</p>
            </div>
            <form action="/reset-password" method="post">
                <div class="form-group input-container">
                    <i class="fas fa-envelope icon "></i>
                    <input type="email" class="form-control control"  name="email"  placeholder="Email address" required />
                </div>

                <div class="form-group input-container">
                    <i class="fas fa-envelope icon "></i>
                    <input type="text" class="form-control control"  name="otp"  placeholder="Enter OTP Here" required />
                </div>

                <div class="form-group input-container">
                    <i class="fas fa-lock icon"></i>
                    <input type="password" class="form-control control" id="password" placeholder="New password" required name="newPassword"/>
                    <i class="fas fa-eye-slash toggle-password" onclick="togglePassword()"></i>
                </div>
                <div class="form-group input-container">
                    <i class="fas fa-lock icon"></i>
                    <input type="password" class="form-control control" placeholder="Confirm password" required />
                </div>
                <button type="submit" class="btn btn-primary res w-100">
                    Reset Password
                </button>
                <div class="auth-links">
                    <a href="/mysticodisha/Signup&SignIn" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to Login
                    </a>
                </div>
            </form>

            
            
        </div>
        <div class="graphic-section">
            <img src="https://cdn-icons-png.flaticon.com/512/6195/6195699.png" alt="Security Illustration" class="illustration">
            <h2>Secure Account Access</h2>
            <p>Ensure your new password is strong and unique</p>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleIcon = document.querySelector('.toggle-password');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.replace('fa-eye-slash', 'fa-eye');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.replace('fa-eye', 'fa-eye-slash');
            }
        }
    </script>
</body>

</html>