<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Existing head content remains the same -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/forgot.css">
    <link rel="icon" href="../images/mysticlogo.jpg"/>
    <title>Forgate Password</title>
</head>

<body>
    <!-- Forgot Password -->
    <div id="forgot-container" class="forgot-container">
        <div class="forgot-card">
            <div class="header pass">
                <h1>Reset Your Password</h1>
                <p class="instruction-text">Enter your email and new password to continue</p>
            </div>
           
            <form action="/forgot-password" method="POST">
                <!-- <label>Email:</label>
                <input type="email" name="email" required>
                <button type="submit">Send OTP</button> -->

                <div class="form-group input-container">
               
                    <i class="fas fa-envelope icon " id="icon-msg"></i>
                    <input type="email" class="form-control control"  name="email"  placeholder="Email address" required />
                    <button  class="otp-btn" id="send-otp-btn"  type="submit" >Get Otp</button>
                   <!-- <div id="loader" class="loader" ></div>  -->
                </div>
            </form>
            
        </div>
        <div class="graphic-section">
            <img src="https://cdn-icons-png.flaticon.com/512/6195/6195699.png" alt="Security Illustration" class="illustration">
            <h2>Secure Account Access</h2>
            <p>Ensure your new password is strong and unique</p>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleIcon = document.querySelector('.toggle-password');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.replace('fa-eye-slash', 'fa-eye');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.replace('fa-eye', 'fa-eye-slash');
            }
        }
    </script>
</body>

</html>